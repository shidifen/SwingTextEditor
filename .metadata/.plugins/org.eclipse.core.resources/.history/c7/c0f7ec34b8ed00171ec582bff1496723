    private class LotsOfMenusBuilder {
		//*All* the menu "elements" are listed here 
    	JMenuBar	 mainMenu;
		JMenu        fileM,      editM,         searchM,      helpM;
		JMenuItem    newItem,    newTabItem,    openItem,     saveItem, 
		             saveAsItem, closeItem,     closeTabItem, exitItem, 
